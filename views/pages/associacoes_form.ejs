<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/auth_header'); %>
</header>

<main>
<div class="row">
  <div class="col-sm-12">
    <div class="jumbotron d-flex flex-column align-items-center">
      <h1><%= type === "create" ? "Cadastrar Nova " : "Editar " %>Associação</h1>
      <form class="col-sm-10 form-floating" method="POST">
        
        <label for="requisito">Requisito</label>
        <select class="form-control mb-3" name="requisito" id="requisito">
          <option selected>Selecione um requisito</option>
          <% requisitos.forEach((requisito, indice) => { %>
            <option value="<%= requisito.id_requisito_funcional %>">RF-<%= indice + 1 %></option>
          <% }); %>
        </select>

        <label for="condicao">Condição</label>
        <select class="form-control mb-3" name="condicao" id="condicao">
          <option selected>Selecione uma condição</option>
          <% requisitos.forEach((requisito, indice) => { %>
            <option value="<%= requisito.id_requisito_funcional %>">RF-<%= indice + 1 %></option>
          <% }); %>
        </select>

        <label for="tipo">Tipo de Associação</label>
        <select class="form-control mb-3" name="tipo" id="tipo">
          <option selected>Selecione um tipo de associação</option>
          <option value="include">Include</option>
          <option value="extend">Extend</option>
          <option value="generalization">Generalization</option>
        </select>

        <p><%= erro ? erro : "" %></p>

        <button class="p-2 col-sm-12 btn-primary" type="submit"><%= type === "create" ? "Criar" : "Editar" %></button>
      </form>
    </div>
  </div>
</div>
</main>

<footer>
  <%- include('../partials/footer'); %>
</footer>

</body>
</html>